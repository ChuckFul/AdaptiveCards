 {
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "style": "default",
    "body": [
        {
            "type": "Container",
            "style": "good",
            "bleed": true,
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Hello world",
                    "size": "ExtraLarge",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "Hello",
                    "wrap": true
                }
            ]
        },
        {
            "style": "emphasis",
            "type": "Container",
            "items": [
                {
                    "type": "Carousel",
                    "rtl": false,
                    "pages": [
                        {
                            "type": "CarouselPage",
                            "rtl": false,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Hi World",
                                    "wrap": true
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Carousel",
            "rtl": false,
            "pages": [
                {
                    "type": "CarouselPage",
                    "rtl": false,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Hello World",
                            "wrap": true
                        }
                    ]
                }
            ]
        }
    ]
}
